<!DOCTYPE html>
<html>
  <head>
    <title>ChemicalRequestForum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <div class="container">
      	<div class="row">
      		<div class="col-md-12">
            <% if current_user.try(:type) == 'AdminUser' %>
              <%= render "shared/admin_nav"%>
            <% else %>
              <%= render "shared/employee_nav"%>
            <% end %>
            <%= yield %>
          </div>
        </div>
      </div>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>
