<div class="card">
  <div class="card-body">

    <h4>
      <% if @request.submitted? %>
        <%=@request.status %> by <%=@request.user.info %>
      <% else %>
        <%=@request.status %> by <%=@request.approver %>
      <% end %>
    </h4>

    <div class="chemical-section">
      <div class="columns-wrapper">
        <% count = 0 %>
        <% while count < 3 %>
          <div class="column">
            <% index = 0 %>
            <% @request.carts.each do |cart| %>
              <% if index % 3 == count %>
                <div class="form_group">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><%= cart.chemical%></span>
                  </div>
                  <span class="input-group-text"><%= cart.count%></span>
                </div>
              <% end %>
              <% index = index + 1 %>
            <%end%>
          </div>
          <% count = count + 1 %>
        <% end %>
      </div>
    </div>

    <% if @request.emergency != "" %>
      <h3>Emergency</h3>
      <p><%= @request.emergency %></p>
    <% end %>

    <h3>Additional Comments</h3>
    <p><%= @request.additional_comments %></p>

  </div>
</div>
