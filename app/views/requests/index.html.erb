<p id="notice"><%= notice %></p>

<h1>Requests</h1>

-------
Pending Non Emergency
<table>
  <thead>
    <tr>
      <th>Emergency</th>
      <th>Additional comments</th>
      <th>Status</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests_pending_non_emergency.each do |request| %>
      <tr>
        <td><%= request.emergency %></td>
        <td><%= request.additional_comments %></td>
        <td><%= request.status %></td>
        <td><%= request.date %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
