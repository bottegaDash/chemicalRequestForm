<div class="spacer-10"></div>

<div class="card">
  <div class="card-body">
    <%= form_for(@anouncement_item) do |f| %>
      <div class="form-group">
        <h4><%= f.label :title %></h4>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :details %>
        <br>
        <%= f.text_area :details, rows:"5"%>
      </div>
      <div class="actions">
        <%= f.submit class:"btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>

<%= render "anouncements" %>
